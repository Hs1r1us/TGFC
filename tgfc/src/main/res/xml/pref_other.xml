<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_category_debug">
        <net.jejer.hipda.ui.CustomSwitchPreference
            android:defaultValue="false"
            android:key="PERF_ERROR_REPORT_MODE"
            android:title="@string/pref_error_report_mode" />

        <net.jejer.hipda.ui.CustomSwitchPreference
            android:defaultValue="false"
            android:key="PERF_ENCODEUTF8"
            android:summary="@string/pref_summary_encode_utf8"
            android:title="@string/pref_title_encode_utf8" />

        <net.jejer.hipda.ui.CustomSwitchPreference
            android:defaultValue="false"
            android:key="PERF_REMOVE_GRAY_BAR"
            android:summary="@string/pref_summary_remove_gray_bar"
            android:title="@string/pref_title_remove_gray_bar" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_animation_type"
            android:entryValues="@array/pref_animation_type_values"
            android:key="PERF_ANIMATION_TYPE"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_animation_type" />

        <net.jejer.hipda.ui.CustomSwitchPreference
            android:defaultValue="true"
            android:key="PERF_AUTO_CLEAR_MEMORY"
            android:summary="@string/pref_summary_auto_clear_memory"
            android:title="@string/pref_title_auto_clear_memory" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_cache">
        <Preference
            android:enabled="true"
            android:key="PERF_CLEAR_CACHE"
            android:persistent="false"
            android:selectable="true"
            android:summary=""
            android:title="@string/pref_title_clear_cache" />
    </PreferenceCategory>

</PreferenceScreen>